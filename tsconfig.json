{
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "module": "node16",
        "lib": ["dom", "ESNext"],
        "experimentalDecorators": true,
        "composite": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "resolvePackageJsonImports": true,
        "allowJs": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist",
        "moduleResolution": "node16",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "package.json"]
}
